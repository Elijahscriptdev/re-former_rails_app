<%
=begin %>
  <form action="/users" method="post" accept-charset="UTF-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label for="username">Username: </label><br>
      <input type="text" name="user[username]"<br><br>
      <label for="email">Email: </label><br>
      <input type="text" name="user[username]"<br><br>
      <label for="password">Password: </label><br> 
      <input type="password" name="user[password]"<br><br>
      <input type="submit" value="Submit">
</form>


<%= form_tag users_path do %>
  <p><%= label_tag "username", "Username: " %></p>
     <%= text_field_tag :'user[username]' %>
     <p><%= label_tag "email", "Email: " %></p>
     <%= email_field_tag :'user[email]' %>
     <p><%= label_tag "password", "Password: " %></p>
     <%= password_field_tag :'user[password]' %>
  <p><%= submit_tag %></p>
<% end %>

<%
=end %>

<h1>CREATE A NEW USER HERE: </h1>

<% if @user.errors.any? %>
<h4 > The following errors prevented the user
    from beign created
</h4 >
<ul>
<% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for @user do |form| %>
  <p><%= form.label :username, "Enter your username: " %></p>
    <%= form.text_field :username %>
  <p><%= form.label :email, "Enter your email: " %></p>
    <%= form.email_field :email %>
  <p><%= form.label :password, "Enter your password: " %></p>
    <%= form.password_field :password %>
    <p><%= form.submit %></p>
<% end %>


